<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>waste-bin.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="recycling.jpg" />
    <None Remove="tree.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="waste-bin.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MahApps.Metro" Version="2.4.10" />
    <PackageReference Include="MahApps.Metro.IconPacks" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="recycling.jpg" />
    <Resource Include="tree.png" />
  </ItemGroup>

</Project>
